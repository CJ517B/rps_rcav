
  <!-- Row 2 -->
  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">You played paper</h2>
        </div>
        <div class="panel-body">
          <img src="/assets/images/paper.png" class="img-responsive">
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <% moves = ["rock", "paper", "scissors"] %>
      <% @computer_move = moves.sample  %>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center"> Computer played
            <%= @computer_move%>
          </h2>
        </div>
        <div class="panel-body">
          <% if @computer_move == "rock" %>
          <img src="/assets/images/rock.png" class="img-responsive">
          <% elsif @computer_move == "paper" %>
          <img src="/assets/images/paper.png" class="img-responsive">
          <% else  %>
          <img src="/assets/images/scissors.png" class="img-responsive">
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- Row 3 -->
  <div class="row">
    <div class="col-xs-12">
      <div class="well text-center">
        <h1>
          <% if @computer_move == "scissors" %>
          <span class="label label-danger">
            You lost!
          </span>
          <% elsif @computer_move == "paper" %>
          <span class="label label-warning">
            You tied!
          </span>
          <% else %>
          <span class="label label-success">
            You won!
          </span>
          <% end %>
        </h1>
      </div>
    </div>
  </div>
</div> <!-- container -->
